<%= title "Login" %>

<%=bootstrap_form_with(url: sessions_path, method: :post) do |f|%>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    
    <%= link_to "forgotten password?", new_password_reset_path%>
    <div class="field">
        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me, 1, params[:remember_me]%>
    </div>
    
    <%= f.primary 'Login' %>
<% end %>

<%= button_to "Login with Github", "/auth/github", class: "btn btn-primary", data: {turbo: false}%>